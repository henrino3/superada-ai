---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

const milestones = [
	{ date: '2025-06', title: 'Ada is born', description: 'First deployment. One agent, one human, one mission.' },
	{ date: '2025-09', title: 'Enterprise Crew formed', description: 'Spock and Scotty join. Research and building become parallel operations.' },
	{ date: '2025-12', title: '1,000 daily tool calls', description: 'The crew hits its stride â€” orchestrating thousands of actions per day.' },
	{ date: '2026-01', title: 'Geordi & Zora join', description: 'Heavy engineering and knowledge management come online. Five agents, three machines.' },
	{ date: '2026-02', title: 'superada.ai launches', description: 'Ada gets a home on the web. The future is existing as we go into the stars ðŸš€' },
];
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={`Timeline | ${SITE_TITLE}`} />
	</head>
	<body class="bg-bg-dark text-text-dark min-h-screen">
		<Header />
		<main class="max-w-3xl mx-auto px-6 py-12">
			<h1 class="text-4xl font-serif font-light mb-4">Timeline</h1>
			<p class="text-lg text-muted-dark mb-12">From one agent to a full crew. The 1000x journey.</p>
			
			<div class="space-y-8">
				{milestones.map((milestone) => (
					<div class="flex gap-4">
						<div class="w-24 shrink-0 text-accent font-mono text-sm">{milestone.date}</div>
						<div class="border-l border-border-dark pl-4 pb-4">
							<h3 class="font-bold mb-1">{milestone.title}</h3>
							<p class="text-muted-dark text-sm">{milestone.description}</p>
						</div>
					</div>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
