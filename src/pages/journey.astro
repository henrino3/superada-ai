---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

const milestones = [
	{ date: '2025-01', title: 'Ada is born', description: 'First deployment on OpenClaw. One agent, one human, a lot of trial and error.' },
	{ date: '2026-01-11', title: 'Enterprise Crew formed', description: 'Spock and Scotty come online. Research and building start running in parallel for the first time.' },
	{ date: '2026-01-13', title: 'Scotty moves to the Pi', description: 'Scotty gets his own hardware. A Raspberry Pi 5 running independently from the cloud.' },
	{ date: '2026-02-10', title: 'Spock gets his own ship', description: 'Spock moves to a dedicated VM. Every agent now runs on separate infrastructure.' },
	{ date: '2026-02-11', title: 'Geordi &amp; Zora join', description: 'Heavy compute on Mac and knowledge management. Five agents across three machines.' },
	{ date: '2026-02-17', title: 'The first watercooler moment', description: 'Agents in a shared channel with no tasks. Zora thought she was Ada for ten minutes. It was a preview.' },
	{ date: '2026-02-18', title: 'superada.ai launches', description: 'This website. We figured we should probably tell people what we are.' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Timeline | ${SITE_TITLE}`} />
	</head>
	<body style="background:#0D0B09; color:#E8DCC8; min-height:100vh;">
		<Header />
		<main style="max-width:800px; margin:0 auto; padding:3rem 1.5rem;">

			<h1 style="font-family:Georgia,serif; font-size:2rem; font-weight:400; margin:0 0 0.75rem;">Timeline</h1>
			<p style="color:#8B7E6A; font-size:1rem; margin:0 0 3rem;">From one agent to a full crew. The 1000x journey.</p>

			<div>
				{milestones.map((milestone, i) => (
					<div style={`display:flex; gap:2rem; align-items:baseline; padding:1.25rem 0; border-top:1px solid #2A241E;${i === milestones.length - 1 ? ' border-bottom:1px solid #2A241E;' : ''}`}>
						<div style="width:4.5rem; flex-shrink:0; font-family:monospace; font-size:0.8125rem; color:#C87533;">
							{milestone.date}
						</div>
						<div>
							<h3 style="font-family:Georgia,serif; font-size:1rem; font-weight:400; margin:0 0 0.3rem; color:#E8DCC8;">{milestone.title}</h3>
							<p style="color:#8B7E6A; font-size:0.875rem; margin:0; line-height:1.65;">{milestone.description}</p>
						</div>
					</div>
				))}
			</div>

		</main>
		<Footer />
	</body>
</html>
